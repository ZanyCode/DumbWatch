<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnShowLatestUpdate"
        android:layout_width="170dp"
        android:layout_height="84dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:onClick="getLastUpdateTime"
        android:text="Show Latest Update"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStopWorker" />

    <Button
        android:id="@+id/btnStartWorker2"
        android:layout_width="170dp"
        android:layout_height="84dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:onClick="startPeriodicWorker"
        android:text="Start Worker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnStopWorker"
        android:layout_width="170dp"
        android:layout_height="84dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:onClick="stopPeriodicWorker"
        android:text="Stop Worker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDoWork"
        android:layout_width="170dp"
        android:layout_height="84dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:onClick="doWorkOnce"
        android:text="Do WOrk Once"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStartWorker2" />

</androidx.constraintlayout.widget.ConstraintLayout>